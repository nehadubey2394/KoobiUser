<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlHeader2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/screen_bg_color">

    <LinearLayout
        android:id="@+id/lyHeaderContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp"
            android:id="@+id/topLayout1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivHeaderBack2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/white_back_ico"
                    android:tint="@color/text_color"
                    android:padding="3dp"
                    />

                <ImageButton
                    android:id="@+id/ibtnChat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="2dp"
                    android:src="@drawable/send_chat_ico"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_alignParentLeft="true"/>


                <TextView
                    style="@style/TextView.Bold"
                    android:id="@+id/tvHeaderTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_booking"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/roboto_bold"/>

                <ImageView
                    android:id="@+id/ivHeaderUser2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="14dp"
                    android:visibility="gone"
                    android:src="@drawable/user_ico"
                    android:layout_marginRight="5dp"
                    android:tint="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvBuisnessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginLeft="12dp"
            android:paddingLeft="2dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/text_color"
            />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/screen_bg_color"
            app:cardCornerRadius="0dp"
            android:layout_marginTop="2dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/lyArtistDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivHeaderProfile"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    app:civ_border_width="1.2dp"
                    android:src="@drawable/defoult_user_img"
                    android:background="@drawable/chat_history_circle_border"
                    app:civ_border_color="@color/transparent"  />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    >
                    <TextView
                        android:id="@+id/tvArtistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:maxWidth="250dp"
                        android:layout_margin="1dp"
                        android:ellipsize="end"
                        android:maxLines="1"/>

                    <TextView
                        android:id="@+id/tvOpeningTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/text_color"
                        android:drawableLeft="@drawable/booking_calendar_icon"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="center"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:layout_margin="1dp"
                        android:text="@string/text_opening_time"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                    <RatingBar
                        android:id="@+id/rating"
                        style="@style/RatingBarSmallGray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:gravity="center_vertical"
                        android:rating="3"
                        android:numStars="5"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:fitsSystemWindows="true"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"
                        android:isIndicator="true"
                        />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/lyHeaderContent"
        android:id="@+id/lyReviewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:padding="2dp"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnReviews"
            style="@style/My_Button_Small.Invert"
            android:layout_width="76dp"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:text="@string/text_reviews"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnPosts"
            style="@style/My_Button_Small.Invert"
            android:layout_width="76dp"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:text="@string/text_posts"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </LinearLayout>

</RelativeLayout>