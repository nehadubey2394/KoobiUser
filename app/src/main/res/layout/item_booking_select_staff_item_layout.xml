<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="0dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="1dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
        <View
            android:id="@+id/lineView"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lineView"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivSelectStaffProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                app:civ_border_width="1dp"
                android:src="@drawable/defoult_user_img"
                android:background="@drawable/gradient_circle_img"
                app:civ_border_color="@color/transparent"
                />

            <TextView
                android:id="@+id/tvStaffArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:ems="10"
                android:ellipsize="end"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:maxWidth="180dp"
                android:padding="2dp"
                android:text="Neha"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/tvSpaciality"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Hair Expert"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>