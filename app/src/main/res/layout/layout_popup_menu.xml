<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rlOptionMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:id="@+id/card_group_filter"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            android:shadowRadius="2"
            app:cardUseCompatPadding="true"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_groupchat_popup"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/add_to_favourite"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/light_gray_shadow" />

                <TextView
                    android:id="@+id/tvClearChat"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/clear_chat"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/gray2" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/mute_chat"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/light_gray_shadow" />


                <TextView
                    android:id="@+id/tvBlockUser"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/block_user"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/light_gray_shadow" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/report_user"
                    android:textColor="@color/black"
                    android:textSize="15sp"

                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/img0tooltip_filter"
            android:layout_marginEnd="12dp"
            android:elevation="4dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ico_menu_bg_arrow" />

    </RelativeLayout>


</LinearLayout>