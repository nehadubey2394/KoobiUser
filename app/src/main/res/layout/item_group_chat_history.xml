<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="1dp"
    android:orientation="vertical"
    android:background="@color/white">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        android:background="@color/light_gray_shadow"
        />

    <RelativeLayout
        android:id="@+id/llHistoryDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        >

        <View
            android:id="@+id/v1"
            android:layout_width="12dp"
            android:layout_height="1dp"
            android:background="@color/light_gray_shadow"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tvHistoryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/v1"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito_regular"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grey"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toRightOf="@+id/tvHistoryTime"
            android:background="@color/light_gray_shadow"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/rlChatHistory"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:civ_border_width="1.6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/defoult_user_img"
            android:background="@drawable/gradient_new_circle_img"
            app:civ_border_color="@color/transparent"
            android:layout_marginLeft="5dp"
            />

        <LinearLayout
            android:id="@+id/llMsg"
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:padding="1dp"
            android:layout_toLeftOf="@+id/llCount"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="neha"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="left"
                android:textColor="@color/text_color"
                android:fontFamily="@font/nunito_regular"
                android:textSize="17sp"
                android:maxWidth="200dp"
                />


            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="message"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_color"
                android:fontFamily="@font/nunito_regular"
                android:textSize="14sp"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            >

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_gravity="right"
                android:fontFamily="@font/nunito_regular"
                android:textSize="13sp"
                android:textColor="@color/gray"
                />


            <RelativeLayout
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_blue_circle"
                >

                <TextView
                    android:id="@+id/tvUnReadCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="0"
                    />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvChatType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:fontFamily="@font/nunito_regular"
                android:textSize="12sp"
                android:textColor="@color/text_color"
                android:layout_marginTop="4dp"
                android:layout_gravity="right"
                />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        android:background="@color/light_gray_shadow"
        />

</LinearLayout>
