<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:src="@drawable/defoult_user_img"
            android:background="@drawable/gradient_circle_img"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/transparent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/btnFollow"
            android:layout_toRightOf="@+id/iv_user_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Dharmraj Acharya"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="2dp"
                android:text="indore city"
                android:fontFamily="@font/roboto_regular"
                android:ellipsize="end"
                android:textColor="@color/grey"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_regular"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:text="24/01/2018"
                android:textSize="12sp" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnFollow"
            style="@style/My_Button_Small.Invert"
            android:layout_width="wrap_content"
            android:minWidth="60dp"
            android:layout_height="22dp"
            android:text="@string/text_follow"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="10sp"
            />


    </RelativeLayout>


</LinearLayout>